<MainLayout />

<style>
  section {
    position: relative;
  }
  .cirkel {
    position: absolute;
    left: 32%;
    top: 30%;
    z-index: 1;
    height: 340px;
    width: 340px;
    border-radius: 50%;
    background-image: linear-gradient(
      to right,
      #396eb2,
      #a6bdd2,
      #abd1ed,
      #8da0e4,
      #ffffff
    );
    opacity: 50%;
  }
  .text_side {
    margin: 20px 0 0 20px;
    position: relative;
  }
  .blue_text {
    margin: 150px 0 0 30px;
    display: flex;
    flex-direction: column;
    gap: 20px;
    position: absolute;
    z-index: 2;
  }
  video {
    width: 100%;
    object-fit: cover;
    align-self: stretch;
  }
</style>
