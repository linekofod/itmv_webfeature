  </div>
  <div class="scroll_btn bouncing">
    <a href="">Scroll ned</a>
    <a class="arrow down" href=""></a>
  </div>
</nav>

<style>
  .nav {
    position: fixed;
    right: 40px;
    top: 10%;
    display: flex;
    flex-direction: column;
    gap: 30px;
  }
  .line {
    border-left: 2px solid var(--navColor);
    height: 540px;
    position: absolute;
    z-index: -1;
    top: 10px;
    right: 9px;
  }
  .nav-item {
    display: flex;
    gap: 20px;
    align-items: center;
    flex-direction: row-reverse;
  }
  .nav-label {
    text-transform: uppercase;
    border: 1px solid var(--beigeColor);
    padding: 5px 10px;
    font-family: Helvetica, Arial, sans-serif;
    color: var(--beigeColor);
    background-color: var(--blueColor);
    opacity: 0;
    transition: opacity 0.1s;
    /* order: 1; */
  }
  .nav-link:hover ~ .nav-label {
    opacity: 1;
  }
  .nav-link {
    height: 20px;
    width: 20px;
    background-color: var(--navColor);
    border-radius: 50%;
  }
  .nav-link:hover {
    background-color: var(--redColor);
  }
  .nav-link-selected {
    background-color: var(--redColor);
  }
  .scroll_btn {
    bottom: 50px;
    writing-mode: vertical-rl;
    text-orientation: mixed;
  }
  .scroll_btn a {
    color: black;
    cursor: default;
  }
  .arrow {
    border: solid black;
    border-width: 0 1px 1px 0;
    display: inline-block;
    padding: 10px;
  }
  .down {
    transform: rotate(45deg);
    -webkit-transform: rotate(45deg);
  }

  .bouncing {
    animation-name: bouncing_kf;
    animation-duration: 2s;
    animation-iteration-count: infinite;
    animation-timing-function: linear;
  }

  @keyframes bouncing_kf {
    0% {
      translate: 0% 5%;
    }

    50% {
      translate: 0% -5%;
    }

    100% {
      translate: 0% 5%;
    }
  }

  /* Mobil version */

  @media screen and (max-width: 600px) {
    .nav {
      display: none;
    }
  }
</style>

<script>
  const dot = document.querySelector("#first-dot");

  dot.addEventListener("click", redDot);

  function redDot() {
    console.log("first dot");
    dot.classList.add("nav-link-selected");
  }
</script>
